FROM node:18-slim

WORKDIR /usr/src/app

RUN apt-get update && apt-get install -y \
    openssl \
    && rm -rf /var/lib/apt/lists/*

COPY package*.json ./
RUN npm install --no-audit --no-fund --prefer-offline

COPY . .

RUN npm run build

EXPOSE 4000

RUN echo '#!/bin/bash\n\
echo "Starting AUVET Authentication Service (Production)..."\n\
\n\
# Generate Prisma client\n\
echo "Generating Prisma client..."\n\
npx prisma generate\n\
\n\
# Note: Database migrations are managed by auvet-backend\n\
# This service only generates the Prisma client\n\
\n\
echo "Starting application..."\n\
exec "$@"' > /usr/local/bin/docker-entrypoint.sh && \
    chmod +x /usr/local/bin/docker-entrypoint.sh

ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["npm", "start"]

